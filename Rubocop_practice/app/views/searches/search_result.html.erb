<% if @range == "User" %>
 <h3>Users search for "<%= @model %>"</h3>
<%else%>
 <h3>Books search for "<%= @model %>"</h3>
<%end%>

<table class="table table-hover table-inverse">

  <% if @range == "User" %>
   <thead>
    <tr>
     <th>Image</th>
     <th>name</th>
    </tr>
   </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(60,60) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(60,60) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>